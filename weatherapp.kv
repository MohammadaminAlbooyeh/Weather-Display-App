# This file defines the appearance and layout of the application.

<WeatherLayout>:
    # These IDs will be accessible in the Python code via self.ids
    background_image: background_image
    city_input: city_input
    weather_info_label: weather_info_label
    weather_icon: weather_icon
    results_layout: results_layout
    loading_spinner: loading_spinner

    # Layer 1: Gradient Background (Canvas)
    canvas.before:
        Color:
            rgba: (0.60, 0.70, 0.98, 0.82) 
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba: (0.85, 0.70, 0.98, 0.38) 
        Rectangle:
            pos: self.pos
            size: self.size
            source: ''
    # Optional: Overlay background image with transparency
    Image:
        id: background_image
        source: 'images/default.jpg'
        allow_stretch: True
        keep_ratio: False
        opacity: 0.25

    # Layer 2: Main Application Content
    BoxLayout:
        orientation: 'vertical'
        padding: dp(25)
        spacing: dp(18)

        # Top Search Section
        BoxLayout:
            size_hint_y: None
            height: dp(56)
            spacing: dp(12)

            TextInput:
                id: city_input
                hint_text: 'Enter city name...'
                multiline: False
                font_size: '20sp'
                background_color: (1, 1, 1, 0.15)
                foreground_color: (0, 0, 0, 1) 
                padding: dp(12), dp(10)
                cursor_color: (0.7, 0.4, 0.95, 1)
                halign: 'center'
                font_name: 'Roboto'
                on_text_validate: root.search_weather()
                canvas.before:
                    Color:
                        rgba: (1, 1, 1, 0.18)
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [18,]

            Button:
                text: 'Search'
                size_hint_x: None
                width: dp(120)
                font_size: '20sp'
                font_name: 'Roboto'
                on_press: root.search_weather()
                background_color: (0.32, 0.45, 0.95, 1)
                background_normal: ''
                color: (0, 0, 0, 1)
                canvas.before:
                    Color:
                        rgba: (0.32, 0.45, 0.95, 1)
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [22,]
                canvas.after:
                    Color:
                        rgba: (0, 0, 0, 0.12)
                    RoundedRectangle:
                        pos: self.x, self.y - 2
                        size: self.width, self.height + 4
                        radius: [22,]

        # Results Display Section
        RelativeLayout:
            id: results_layout
            opacity: 0 # Initially hidden

            Image:
                id: weather_icon
                size_hint: None, None
                size: dp(120), dp(120)
                pos_hint: {'center_x': 0.5, 'top': 1}

            # Modern result box
            BoxLayout:
                orientation: 'vertical'
                size_hint: 0.92, None
                height: self.minimum_height
                pos_hint: {'center_x': 0.5, 'center_y': 0.4}
                padding: dp(18)
                spacing: dp(8)
                canvas.before:
                    Color:
                        rgba: (1, 1, 1, 0.18)
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [22,]
                    Color:
                        rgba: (0, 0, 0, 0.13)
                    Rectangle:
                        pos: self.x, self.y - 4
                        size: self.width, self.height + 8

                Label:
                    id: weather_info_label
                    font_size: '20sp'
                    font_name: 'Roboto'
                    halign: 'center'
                    size_hint_y: None
                    height: self.texture_size[1]
                    text_size: self.width, None
                    color: (0, 0, 0, 1)

    # Layer 3: Loading Animation
    Spinner:
        id: loading_spinner
        size_hint: None, None
        size: dp(80), dp(80)
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        active: False
        opacity: 0